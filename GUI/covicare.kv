#:kivy 2.0

<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            text: "Welcome to CoviCare"

        GridLayout:
            cols: 2
            Button:
                text: "Access Leads"
                on_release:
                    root.manager.current = "accessmenu"
                    root.manager.transition.direction = "left"

            Button:
                text: "Supply Leads"
                on_release:
                    root.manager.current = "supplymenu"
                    root.manager.transition.direction = "left"


<SupplyMenu>:
    name: "supplymenu"

    GridLayout:
        cols: 1
        size: root.width, root.height
        
        GridLayout:
            cols: 2

            Label:
                text: "City: "
            TextInput:
                id: supplycity
                multiline: False
        
        GridLayout:
            cols: 4

            Button:
                text: "Medicine"
                on_release: 
                    root.manager.current = "supplymedicine"
                    root.manager.transition.direction= "left"

            Button:
                text: "Bed"
            Button:
                text: "Medical Equipment"
            Button:
                text: "Blood"

<SupplyMedicine>:
    name: "supplymedicine"
    
    GridLayout:
        rows:2

        GridLayout:
            cols:2
            rows:6

            Label:
                text: "Medicine ID: "
            TextInput:
                id: medid
                multiline: False

            Label:
                text: "Medicine Name: "
            TextInput:
                id: medname
                multiline: False

            Label:
                text: "Address: "
            TextInput:
                id: medaddress
                multiline: True

            Label:
                text: "Stock: "
            TextInput:
                id: medstock
                multiline: False

            Label:
                text: "Price: "
            TextInput:
                id: medprice
                multiline: False

            Label:
                text: "Contact: "
            TextInput:
                id: medcontact
                multiline: False
        Button:
            #reset all values to empty (IMP)
            text: "Submit Details"